{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl" : "src",
        "paths": {
            "@templates/*":["templates/*"],
            "@images/*":["assets/images/*"],
            "@icons/*":["assets/icons/*"],
            "@logos/*":["assets/logos/*"],
            "@components/*":["components/*"],
            "@containers/*":["containers/*"],
            "@context/*":["context/*"],
            "@hooks/*":["hooks/*"],
            "@styles/*":["styles/*"],
        }
    },
    "exclude": ["node_modules"], 
    "include": ["next-env.d.js", "**/*.js", "**/*.jsx", "src/pages/index.js","src/*"]
}